# Configs
config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config secondsBetweenRepeat 0.1
config checkDefaultsOnLoad true
config focusCheckWidthMax 3000

# Monitor Aliases
alias left  0
alias right 1

# Grid aliases
alias x screenOriginX
alias y screenOriginY
alias w screenSizeX
alias h screenSizeY
alias col ${w}/10
alias hcol ${h}/10

# Display aliases
alias w5     move ${x}+0*${col};${y}  5*${col};${h}
alias w5-o1  move ${x}+1*${col};${y}  5*${col};${h}
alias w5-o2  move ${x}+2*${col};${y}  5*${col};${h}
alias w5-o3  move ${x}+3*${col};${y}  5*${col};${h}
alias w5-o4  move ${x}+4*${col};${y}  5*${col};${h}
alias w5-o5  move ${x}+5*${col};${y}  5*${col};${h}

# Display profiles
layout dual 'Spotify':REPEAT              ${w5}     ${left}
layout dual 'Sonos S1 Controller':REPEAT  ${w5}     ${left}
layout dual 'Slack':REPEAT                ${w5-o5}  ${left}
layout dual 'Numbers':REPEAT              ${w5-o5}  ${left}
layout dual 'Google Chrome':REPEAT        ${w5}     ${right}
layout dual 'iTerm2':REPEAT               ${w5-o3}  ${right}
layout dual 'Sublime Text':REPEAT         ${w5-o5}  ${right}
layout dual 'Sourcetree':REPEAT           ${w5-o5}  ${right}

# Default Layouts
default dual count:2
default single count:1

bind g:ctrl,shift grid

## From https://github.com/jigish/dotfiles/blob/master/slate

# Configs
config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config secondsBetweenRepeat 0.1
config checkDefaultsOnLoad true
config focusCheckWidthMax 3000

# Monitor Aliases
alias mon-laptop      1280x800
alias mon-samsung     1920x1080
alias mon-cinema-display  2560x1440

# Grid aliases
alias x screenOriginX
alias y screenOriginY
alias w screenSizeX
alias h screenSizeY*0.925
alias hGap screenSizeY
alias col ${w}/12
alias hcol ${h}/12

# Display aliases
alias big-2-top-whole        move ${x}+0*${col};${y}     12*${col};${hGap}        ${mon-cinema-display}
alias big-2-top-left-6       move ${x}+0*${col};${y}      6*${col};${hGap}        ${mon-cinema-display}
alias big-2-top-left-6-o1    move ${x}+1*${col};${y}      6*${col};${hGap}        ${mon-cinema-display}
alias big-2-top-left-6-o2    move ${x}+2*${col};${y}      6*${col};${hGap}        ${mon-cinema-display}
alias big-2-top-left-7       move ${x}+0*${col};${y}      7*${col};${hGap}        ${mon-cinema-display}
alias big-2-top-left-7-o1    move ${x}+1*${col};${y}      7*${col};${hGap}        ${mon-cinema-display}
alias big-2-top-left-7-o2    move ${x}+2*${col};${y}      7*${col};${hGap}        ${mon-cinema-display}
alias big-2-top-left-8       move ${x}+0*${col};${y}      8*${col};${hGap}        ${mon-cinema-display}
alias big-2-top-right-5      move ${x}+7*${col};${y}      5*${col};${hGap}        ${mon-cinema-display}
alias big-2-top-right-6      move ${x}+6*${col};${y}      6*${col};${hGap}        ${mon-cinema-display}
alias big-2-top-right-6-o1   move ${x}+5*${col};${y}      6*${col};${hGap}        ${mon-cinema-display}
alias big-2-top-right-7      move ${x}+5*${col};${y}      7*${col};${hGap}        ${mon-cinema-display}
alias big-2-top-right-8      move ${x}+4*${col};${y}      8*${col};${hGap}        ${mon-cinema-display}
alias big-2-top-right-9      move ${x}+3*${col};${y}      9*${col};${hGap}        ${mon-cinema-display}
alias big-2-top-right-10     move ${x}+2*${col};${y}     10*${col};${hGap}        ${mon-cinema-display}
alias big-2-bot-whole        move ${x};${y}              12*${col};${hGap}        ${mon-laptop}

alias 2-top-whole        move ${x}+0*${col};${y}     12*${col};${h}        ${mon-samsung}
alias 2-top-left-6       move ${x}+0*${col};${y}      6*${col};${h}        ${mon-samsung}
alias 2-top-left-6-o1    move ${x}+1*${col};${y}      6*${col};${h}        ${mon-samsung}
alias 2-top-left-6-o2    move ${x}+2*${col};${y}      6*${col};${h}        ${mon-samsung}
alias 2-top-left-7       move ${x}+0*${col};${y}      7*${col};${h}        ${mon-samsung}
alias 2-top-left-7-o1    move ${x}+1*${col};${y}      7*${col};${h}        ${mon-samsung}
alias 2-top-left-7-o2    move ${x}+2*${col};${y}      7*${col};${h}        ${mon-samsung}
alias 2-top-left-8       move ${x}+0*${col};${y}      8*${col};${h}        ${mon-samsung}
alias 2-top-right-5      move ${x}+7*${col};${y}      5*${col};${h}        ${mon-samsung}
alias 2-top-right-6      move ${x}+6*${col};${y}      6*${col};${h}        ${mon-samsung}
alias 2-top-right-6-o1   move ${x}+5*${col};${y}      6*${col};${h}        ${mon-samsung}
alias 2-top-right-7      move ${x}+5*${col};${y}      7*${col};${h}        ${mon-samsung}
alias 2-top-right-8      move ${x}+4*${col};${y}      8*${col};${h}        ${mon-samsung}
alias 2-top-right-9      move ${x}+3*${col};${y}      9*${col};${h}        ${mon-samsung}
alias 2-top-right-10     move ${x}+2*${col};${y}     10*${col};${h}        ${mon-samsung}
alias 2-bot-whole        move ${x};${y}              12*${col};${h}        ${mon-laptop}

alias 1-whole            move ${x};${y}              12*${col};${h}        ${mon-laptop}
alias 1-top-left         move ${x};${y}              6*${col};6*${hcol}    ${mon-samsung}

# Display profiles
layout 2monitors-big 'Google Chrome':REPEAT_LAST,TITLE_ORDER_REGEX=^Developer\sTools\s-\s.+$  ${2-bot-whole} | ${2-top-left-6}
layout 2monitors-big 'Slack':REPEAT               ${big-2-top-left-6-o1}
layout 2monitors-big 'iTerm2':REPEAT              ${big-2-top-left-6-o2}
layout 2monitors-big 'Sublime Text':REPEAT        ${big-2-top-right-6}
layout 2monitors-big 'SourceTree':REPEAT          ${big-2-top-right-7}
layout 2monitors-big 'Microsoft Outlook':REPEAT   ${big-2-top-left-6}
layout 2monitors-big 'Spotify':REPEAT             ${big-2-bot-whole}

layout 2monitors 'Google Chrome':REPEAT_LAST,TITLE_ORDER_REGEX=^Developer\sTools\s-\s.+$  ${2-bot-whole} | ${2-top-left-8}
layout 2monitors 'Slack':REPEAT               ${2-top-left-7-o1}
layout 2monitors 'iTerm2':REPEAT              ${2-top-left-7-o2}
layout 2monitors 'Sublime Text':REPEAT        ${2-top-right-8}
layout 2monitors 'SourceTree':REPEAT          ${2-top-right-10}
layout 2monitors 'Microsoft Outlook':REPEAT   ${2-top-left-8}
layout 2monitors 'Spotify':REPEAT             ${2-bot-whole}

layout 1monitor 'Google Chrome':REPEAT      ${1-whole}
layout 1monitor 'Slack':REPEAT              ${1-whole}
layout 1monitor 'iTerm2':REPEAT             ${1-whole}
layout 1monitor 'Sublime Text':REPEAT       ${1-whole}
layout 1monitor 'SourceTree':REPEAT         ${1-whole}
layout 1monitor 'Microsoft Outlook':REPEAT  ${1-whole}
layout 1monitor 'Spotify':REPEAT            ${1-whole}

# Default Layouts
default 2monitors-big resolutions:${mon-laptop};${mon-cinema-display}
default 2monitors resolutions:${mon-laptop};${mon-samsung}
default 1monitor  resolutions:${mon-laptop}
